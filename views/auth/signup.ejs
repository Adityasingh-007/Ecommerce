<% layout('./layouts/boilerplate') %>

    <div class="row">

        <div class="col-md-6 mx-auto">
            <%- include('../partials/flash') %>
                <h1 class="display-6">Sign up</h1>
                <form action="/register" method="POST">
                    <div class="mb-3">

                        <label class="form-label" for="username">Username:</label>
                        <input class="form-control" type="text" name="username" id="username"
                            placeholder="enter username">
                    </div>

                    <div class="mb-3">

                        <label class="form-label" for="email">email:</label>
                        <input class="form-control" type="email" name="email" id="email" placeholder="enter mail">
                    </div>


                    <div class="mb-3">
                        <p>want to register as ?</p>
                        <div class="mx-2">
                            <label class="form-label" for="Buyer">Buyer:</label>
                            <input class="form-check-input" type="radio" name="role" value="Buyer" id="Buyer">
                        </div>

                        <div class="mx-2">
                            <label class="form-label" for="Seller">Seller:</label>
                            <input class="form-check-input" type="radio" name="role" value="Seller" id="Seller">
                            <!-- this role will contains value seller -->
                        </div>

